# available colors: {u,b,bg, } black, red, green, yellow, blue, purple, cyan, white, reset
function(COLOR_MESSAGE TEXT)
  if (CMAKE_COLOR_MAKEFILE AND NOT WIN32)
    message(${TEXT})
  else ()
    string(REGEX REPLACE "${_escape}[\\[0123456789;]*m" "" __TEXT ${TEXT})
    message("${__TEXT} ")
  endif ()
endfunction ()

